jQuery ->
  $('#uploader').click ->
    $('#image_uploader').fadeIn(400);

  $('#picker').click ->
    $('#image_picker').fadeIn(400);

  $('.win_close').click ->
    $(this).parent().parent().fadeOut(400);

  $('.picker_button').click ->
    $(this).parent().parent().fadeOut(400);

  $('.button').click ->
    $(this).fadeOut(400)
    $(this).closest('form').submit()
    $('.collage_actions').html("<div id='loading'></div>")

  $('#collage_title').change ->
    dis()

  dis = ()->
    if $('#collage_title').val().length == 0 || $('#collage_selected_images').val().length == 0
      $('.button').attr('disabled','disabled')
    else
      $('.button').removeAttr("disabled")

  dis()
